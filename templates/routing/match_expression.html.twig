{% extends "master.html.twig" %}

{% block title %}Routing{% endblock %}

{% block content %}
    <div class="breadcrumb-bar">
        <div class="container">
            <div class="row align-items-center text-center">
                <div class="col-md-12 col-12">
                    <h2 class="breadcrumb-title">Routing</h2>
                    <nav aria-label="breadcrumb" class="page-breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                            <li class="breadcrumb-item"><a href="{{ path('routing_match_expression') }}">Routing</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Match Expression/ Extra Parameters</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="login-content">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-12 mx-auto">
                    {% include 'partials/flash.html.twig' %}
                </div>
                <div class="col-md-4 col-lg-4">
                    {% include 'components/routing_links.html.twig' %}
                </div>
                <div class="col-md-8 col-lg-8">
                   <div class="card">
                       <p>This route only works with get route</p>

                       <div class="mb-3">
                           <code>
                               condition: "context.getMethod() in ['GET', 'HEAD']
                           </code>
                       </div>
                   </div>

                    <div class="card">
                        <p>
                            <code>id</code> parameter can also passed in above url. But it's must be less then 1000 and an integer <br>
                        </p>
                        <div class="mb-3">
                            <code>
                                requirements: ['id' => '\d+']
                            </code> <br>
                            <code>
                                defaults: ["id" => 1],
                            </code> <br>
                            <code>
                                condition: "context.getMethod() in ['GET', 'HEAD'] and params['id'] < 1000"
                            </code>
                        </div>
                        <p><b>Default is</b>: 1</p>
                        <p><b>You passed </b>: {{ app.request.get('id') }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}