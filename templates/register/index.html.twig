{% extends "master.html.twig" %}

{% block title %}SignUp{% endblock %}

{% block content %}
    <div class="breadcrumb-bar">
        <div class="container">
            <div class="row align-items-center text-center">
                <div class="col-md-12 col-12">
                    <h2 class="breadcrumb-title">Create an Account</h2>
                    <nav aria-label="breadcrumb" class="page-breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Register</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="login-content">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-lg-5 mx-auto">
                    <div class="login-wrap register-form">
                        <div class="login-header">
                            <h3>Create an Account</h3>
                            <p>Lets start with <span>Listee</span></p>
                        </div>
                        <form action="{{ path('app_register') }}" method="post" novalidate="novalidate">
                            <div class="form-group group-img">
                                <div class="group-img">
                                    <i class="feather-user"></i>
                                    <label for="{{ registrationForm.password.vars.id }}">Name</label>
                                    {{ form_widget(registrationForm.name, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(registrationForm.name) }}
                                </div>
                            </div>
                            <div class="form-group group-img">
                                <div class="group-img">
                                    <i class="feather-mail"></i>
                                    <label for="{{ registrationForm.password.vars.id }}">Email</label>
                                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(registrationForm.email) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="pass-group group-img">
                                    <i class="feather-lock"></i>
                                    <label for="{{ registrationForm.password.vars.id }}">Password</label>
                                    {{ form_widget(registrationForm.password.first) }}
                                    {{ form_errors(registrationForm.password.first) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="pass-group group-img">
                                    <i class="feather-lock"></i>
                                    <label for="{{ registrationForm.password.vars.id }}">Confirm Password</label>
                                    {{ form_widget(registrationForm.password.second) }}
                                    {{ form_errors(registrationForm.password.second) }}
                                </div>
                            </div>
                            <button class="btn btn-primary w-100 login-btn" type="submit" name="submit">Create Account
                            </button>
                            <div class="register-link text-center">
                                <p>Already have an account? <a class="forgot-link"
                                                               href="{{ path('app_login') }}">Login</a></p>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}